{{#each article}}
<div class="card">
    <div class="card-body">
        
        <!-- Article link, title, and description for each article-->
        <h1 class="card-title">{{this.title}}</h1>
        <p class="card-subtitle mb-2 text-muted">{{this.description}}</p>
        <a href="https://www.fantasyflightgames.com{{this.link}}" class="card-link" target="_blank">Article</a>

        <!-- This targets the "Add a comment" modal-->
        <a href="#" class="card-link" data-toggle="modal" data-target="#id{{this._id}}">Add a Comment</a>

        <!--Comments accordion -->
        <div class="accordion" id="commentCollapsible">
            <div class="card">
                <div class="card-header" id="comment">
                    <h5 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#comment{{this.id}}" aria-expanded="false"
                            aria-controls="collapseThree">
                            <h4>Comments</h4>
                        </button>
                    </h5>
                </div>
                <div id="comment{{this.id}}" class="collapse" aria-labelledby="comment" data-parent="#commentCollapsible">
                    <div class="card-body">
                        {{#each note}}
                        <div class="row">
                            <div class="col-sm-10">
                                <h3 id="noteTitle">
                                    Title: {{title}}
                                </h3>
                                <h3 id="noteBody">
                                    Comment: {{body}}
                                </h3>
                            </div>
                            <div class="col-sm-2">
                                <i class="fa fa-trash" aria-hidden="true" id="delete" data-id="{{this._id}}"></i>
                            </div>
                        </div>
                        <br> 
                        {{/each}}
                    </div>
                </div>
                <span class="border-bottom"></span>
            </div>
        </div>
    </div>
</div>

<!-- "Add a comment" Modal -->
<div class="modal fade" id="id{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Title</label>
                    <input id="title{{this._id}}" type="text" class="form-control title" placeholder="Title">
                </div>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="noteBody">Comment</label>
                        <textarea id="body{{this._id}}" class="form-control" rows="3" placeholder="Leave your comment here"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="close">Close</button>
                <button type="button" class="btn btn-primary" data-id="{{this._id}}" data-dismiss="modal" id="submit">Submit</button>
            </div>
        </div>
    </div>
</div>
{{/each}}

<script src="../assets/js/logic.js"></script>